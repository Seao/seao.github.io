{
  "name": "seao.github.io",
  "version": "1.0.0",
  "description": "Freelance protfolio",
  "author": "Aurélien Wolz",
  "repository": "git@github.com/Seao/seao.github.io.git",
  "keywords": [
    "aurélien",
    "wolz",
    "freelance",
    "web",
    "developer",
    "lyon"
  ],
  "scripts": {
    "prestart": "npm run build",
    "start": "run-p watch server",
    "clean": "rimraf build/{css/*,js/*}",
    "server": "browser-sync start -c bs-config.js",
    "scss": "node-sass src/scss/style.scss build/css/style.css --output-style compressed --indent-width 2 --source-map build/css/",
    "autoprefixer": "postcss --use autoprefixer -r build/css/style.css",
    "build": "npm run clean & run-p build:*",
    "build:css": "run-s scss autoprefixer",
    "build:js": "uglifyjs src/js/* -o build/js/scripts.js",
    "build:templates": "cp -R src/templates/* build",
    "watch": "run-p watch:*",
    "watch:js": "onchange 'src/js/' -- npm run build:js",
    "watch:css": "onchange 'src/scss/' -- npm run build:css",
    "watch:templates": "onchange 'src/templates/' -- npm run build:templates"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "browser-sync": "^2.26.13",
    "husky": "^4.3.6",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "uglify-js": "^3.12.3"
  }
}
